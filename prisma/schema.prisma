// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model employees {
  id          Int      @id @default(autoincrement()) @unique
  name        String
  linkedinlink String
  cvfile      String
  profileimage String
  inforoadmap String  
  idposition  Int
  email       String  @unique
  password    String
  teams teamemployees[]
}

model teams {
  id Int @id @default(autoincrement()) @unique
  name String
  employees teamemployees[]
  orders orders[]
}

model teamemployees {
  team teams  @relation(fields: [idteam], references: [id], onDelete: Cascade, onUpdate: Cascade)
  idteam  Int
  employee employees  @relation(fields: [idemployee], references: [id], onDelete: Cascade, onUpdate: Cascade)
  idemployee Int

  @@id([idteam, idemployee])
}

model orders {
  id Int @id @default(autoincrement()) @unique
  orderstatus String
  orderdesc String
  orderdate DateTime @default(now())
  idclient Int
  team teams @relation(fields: [idteam], references: [id])
  idteam Int
}