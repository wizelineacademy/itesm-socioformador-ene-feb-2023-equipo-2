generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model employees {
  id          Int      @id @default(autoincrement()) @unique
  name        String
  linkedinlink String
  cvfile      String
  profileimage String
  inforoadmap String  
  position employeeposition @relation(fields: [idposition], references[id])
  idposition  Int
  email       String  @unique
  password    String
  teams teamemployees[]
  department departmentemployees[]
}

model employeeposition {
  id Int @id @default(autoincrement()) @unique
  name String
  employee employees[]
}

model teams {
  id Int @id @default(autoincrement()) @unique
  name String
  employees teamemployees[]
  orders orders[]
}

model teamemployees {
  team teams  @relation(fields: [idteam], references: [id], onDelete: Cascade, onUpdate: Cascade)
  idteam  Int
  employee employees  @relation(fields: [idemployee], references: [id], onDelete: Cascade, onUpdate: Cascade)
  idemployee Int

  @@id([idteam, idemployee])
}

model orders {
  id Int @id @default(autoincrement()) @unique
  orderstatus String
  orderdesc String
  orderdate DateTime @default(now())
  client client @relation(fields: [idclient], references: [id])
  idclient Int
  team teams @relation(fields: [idteam], references: [id])
  idteam Int
}

model client {
  id Int @id @default(autoincrement()) @unique
  name String
  orders orders[]
}

model department {
  id Int @id @default(autoincrement()) @unique
  name String 
  employees departmentemployees[]
}

model departmentemployees {
  department department  @relation(fields: [iddepartment], references: [id], onDelete: Cascade, onUpdate: Cascade)
  iddepartment Int
  employee employees  @relation(fields: [idemployee], references: [id], onDelete: Cascade, onUpdate: Cascade)
  idemployee Int

  @@id([iddepartment, idemployee])
}

